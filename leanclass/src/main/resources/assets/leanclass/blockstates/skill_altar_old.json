{
  "multipart": [
    {
      "apply": { "model": "leanclass:block/skill_altar" }
    },
    {
      "when": { "shard_slot": "south" },
      "apply": { "model": "leanclass:block/shard_south" }
    },
    {
      "when": { "shard_slot": "west" },
      "apply": { "model": "leanclass:block/shard_south", "y": 90 }
    },
    {
      "when": { "shard_slot": "north" },
      "apply": { "model": "leanclass:block/shard_south", "y": 180 }
    },
    {
      "when": { "shard_slot": "east" },
      "apply": { "model": "leanclass:block/shard_south", "y": 270 }
    }
  ]
}